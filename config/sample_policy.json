{
	"Version": "2012-10-17",
	"Statement": [
		{
			"Sid": "AmznJobAgentDynamoDBPolicy",
			"Effect": "Allow",
			"Action": [
				"dynamodb:GetItem",
				"dynamodb:Scan",
				"dynamodb:Query",
				"dynamodb:DescribeTable",
				"dynamodb:PutItem",
				"dynamodb:UpdateItem"
			],
			"Resource": [
				"*"
			]
		},
		{
			"Sid": "AmznJobAgentCWLogsPolicy",
			"Effect": "Allow",
			"Action": [
				"logs:CreateLogStream",
				"logs:PutLogEvents"
			],
			"Resource": [
				"*"
			]
		},
		{
			"Sid": "AmznJobAgentSSMParametersPolicy",
			"Effect": "Allow",
			"Action": [
				"ssm:GetParameters",
				"ssm:GetParametersByPath",
				"ssm:GetParameter"
			],
			"Resource": [
				"arn:aws:ssm:{Region}:{Account}:parameter/amznalertbot/*"
			]
		},
		{
			"Sid": "AmznJobAgentSESTemplatePolicy",
			"Effect": "Allow",
			"Action": [
				"ses:GetEmailTemplate"
			],
			"Resource": [
				"arn:aws:ses:{Region}:{Account}:template/AmznJobsNotice"
			]
		},
		{
			"Sid": "AmznJobAgentSESConfigSetPolicy",
			"Effect": "Allow",
			"Action": [
				"ses:GetConfigurationSet"
			],
			"Resource": [
				"arn:aws:ses:{Region}:{Account}:configuration-set/amznjobssender"
			]
		},
		{
			"Sid": "AmznJobAgentSESIdentityPolicy",
			"Effect": "Allow",
			"Action": [
				"ses:GetEmailIdentity"
			],
			"Resource": [
				"arn:aws:ses:{Region}:{Account}:identity/{IdentityName}"
			]
		},
		{
			"Sid": "AmznJobAgentSESSendEmailPolicy",
			"Effect": "Allow",
			"Action": [
				"ses:SendEmail"
			],
			"Resource": [
				"*"
			]
		}
	]
}
